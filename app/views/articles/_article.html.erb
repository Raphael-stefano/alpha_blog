<div class="card text-center w-50 my-4 shadow-lg bg-body-tertiary", id="<%= dom_id article %>">
    <div class="card-header">
      <i>by Raphael Erbetta</i>
    </div>
    <div class="card-body py-4">
      <h5 class="card-title text-success mt-3"><%= article.title %></h5>
      <div class="card-text mb-5 text-start px-3"><%= simple_format(article.description) %></div>
      <div class="d-flex flex-row align-items-center justify-content-center">
        <%= link_to "Back to articles", articles_path, class: "btn btn-outline-success" %>
        <%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-outline-info mx-3" %>
        <%= button_to "Destroy this article", @article, method: :delete, class: "btn btn-outline-danger" %>
      </div>
    </div>
    <div class="card-footer text-body-secondary">
      <small>Created <%= time_ago_in_words(article.created_at) %> ago, edited <%= time_ago_in_words(article.updated_at) %>  ago</small>
    </div>
  </div>
